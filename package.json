    "promises-aplus"
  ],
  "author": "Domenic Denicola <d@domenic.me> (https://domenic.me)",
  "contributors": [
    {
      "name": "Rustam Gaifiev",
      "email": "rustam.bmt@gmail.com"
    }
  ],
  "license": "WTFPL",
  "packageManager": "pnpm@8.12.1",
  "engines": {
    "node": ">=20.10.0"
  },
  "type": "module",
  "types": "./dist/chai-promise.d.ts",
  "main": "./dist/chai-promise.js",
