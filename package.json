    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^10.3.0",
